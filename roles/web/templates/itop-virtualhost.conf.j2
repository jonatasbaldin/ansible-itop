<VirtualHost *:80>
    DocumentRoot "/var/www/{{ fqdn }}/"
    ServerName {{ fqdn }}
    ServerAlias {{ fqdn }}

    ErrorLog "/var/www/{{ fqdn }}/logs/error.log"
    CustomLog "/var/www/{{ fqdn }}/logs/access.log" common

    <Directory "/var/www/{{ fqdn }}/">
        Options Includes FollowSymLinks
        AllowOverride All
        Order allow,deny
        Allow from all
    </Directory>

</VirtualHost>
